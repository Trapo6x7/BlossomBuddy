                    "200": {
                        "description": "Liste des plantes de l'utilisateur"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/user/plant": {
            "post": {
                "tags": [
                    "UserPlant"
                ],
                "summary": "Ajoute une plante à l'utilisateur",
                "operationId": "f209da9110e8cae9cfd01adbdc4fba02",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "plant_name",
                                    "city"
                                ],
                                "properties": {
                                    "plant_name": {
                                        "type": "string",
                                        "example": "Test"
                                    },
                                    "city": {
                                        "type": "string",
                                        "example": "Lyon"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Plante ajoutée à l'utilisateur"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/user/plant/{id}": {
            "get": {
                "tags": [
                    "UserPlant"
                ],
                "summary": "Affiche une plante précise de l'utilisateur",
