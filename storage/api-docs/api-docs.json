                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Détails de la plante de l'utilisateur"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "UserPlant"
                ],
                "summary": "Supprime une plante de l'utilisateur",
                "operationId": "ee358d3a567b9f3c3986f4d2686254bb",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Plante supprimée de l'utilisateur"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
